<!-- app/src/main/res/layout/activity_preferencias.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="16dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Switch
        android:id="@+id/switchNews"
        android:text="Receber newsletter"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/spinnerTema"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnVoltarPref"
            android:text="Voltar"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnProximoPref"
            android:text="PrÃ³ximo"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>
